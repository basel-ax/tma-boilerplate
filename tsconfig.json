{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["ES2020", "WebWorker"],
		"types": ["@cloudflare/workers-types"],
		"moduleResolution": "node",
		"strict": true,
		"strictNullChecks": true,
		"noEmit": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["worker/*"]
		}
	},
	"include": ["worker/**/*.ts"],
	"exclude": ["node_modules", "dist", "webapp"]
}
